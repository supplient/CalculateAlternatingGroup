{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type":"shell",
            "label": "wasm build",
            "command":"emcc",
            "args": [
                "main.cpp",
                "-s",
                "WASM=1",
                "-o",
                "work.html"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type":"shell",
            "label": "wasm run",
            "command": "emrun",
            "args": [
                "--no_browser",
                "--port",
                "8080",
                "./work.html"
            ],
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}